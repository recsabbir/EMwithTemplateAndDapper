@{ ViewBag.Title = "EM | Employees"; }
<div class="row">

    <div id="accordion" class="col m-0 p-0">

        <div class="row" id="createDiv">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header" id="createHeading">
                        <h5 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target="#createCardBody" aria-expanded="true" aria-controls="createCardBody">
                                Create Employee
                            </button>
                        </h5>

                    </div>

                    <div id="createCardBody" class="collapse" aria-labelledby="createHeading" data-parent="#accordion">
                        <div class="card-body" id="createCardBody">
                            <form id="employeeCreateForm">

                                <input type="hidden" name="id" id="createEmployeeId" value="0">

                                <div class="row justify-content-around">

                                    <div class="col-md-7">

                                        <div class="form-row justify-content-around pb-4">

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="createEmployeeName">Name</label>
                                                    <input type="text" class="form-control" id="createEmployeeName" aria-describedby="nameHelp" name="name" placeholder="Enter Name" required>
                                                    <small id="nameHelp" class="form-text text-muted"> </small>
                                                </div>
                                            </div>


                                            <div class="col-md-5 pl-3">
                                                <div class="form-group">
                                                    <label for="createEmployeeBgroup">Blood Group</label>
                                                    <select class="form-control" id="createEmployeeBgroup" aria-describedby="bgroupHelp" name="bgroup">
                                                        <option value="" selected>Blood Group</option>
                                                        <option value="A+">A+</option>
                                                        <option value="A-">A-</option>
                                                        <option value="B+">B+</option>
                                                        <option value="B-">B-</option>
                                                        <option value="AB+">AB+</option>
                                                        <option value="AB-">AB-</option>
                                                        <option value="O+">O+</option>
                                                        <option value="O-">O-</option>
                                                    </select>
                                                    <small id="bgroupHelp" class="form-text text-muted"> </small>
                                                </div>
                                            </div>


                                        </div>

                                        <div class="form-row justify-content-around pb-4">
                                            <div class="col-md-6">
