
<div class="card">
    <div class="card-header">Edit Employee Data</div>
    <div class="card-body">
        <form id="employeeUpdateForm">

            <input type="hidden" name="id" id="updateEmployeeId" value="0">

            <div class="row justify-content-around">

                <div class="col-md-9">

                    <div class="form-row justify-content-around pb-4">

                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="updateEmployeeName">Name</label>
                                <input type="text" class="form-control" id="updateEmployeeName" aria-describedby="uNameHelp" name="name" placeholder="Enter Name" required>
                                <small id="uNameHelp" class="form-text text-muted"> </small>
                            </div>
                        </div>
                        <div class="col-md-3 pl-4">
                            <div class="form-group">
                                <label for="updateEmployeeBgroup">Blood Group</label>
                                <select class="form-control" id="updateEmployeeBgroup" aria-describedby="uBgroupHelp" name="bgroup">
                                    <option value="" selected>Blood Group</option>
                                    <option value="A+">A+</option>
                                    <option value="A-">A-</option>
                                    <option value="B+">B+</option>
                                    <option value="B-">B-</option>
                                    <option value="AB+">AB+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="O+">O+</option>
                                    <option value="O-">O-</option>
                                </select>
                                <small id="uBgroupHelp" class="form-text text-muted"> </small>
                            </div>
                        </div>
                        <div class="col-md-4 pl-4">
                            <div class="form-group">
                                <label for="updateEmployeeDob">Date Of Birth</label>
                                <input type="date" class="form-control" id="updateEmployeeDob" aria-describedby="uDobHelp" name="dob" value="">
                                <small id="uDobHelp" class="form-text text-muted"> </small>
                            </div>
                        </div>

                    </div>

                    <div class="form-row justify-content-start pb-4">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="updateEmployeeNID">NID Number</label>
                                <input type="text" class="form-control" id="updateEmployeeNID" aria-describedby="uNidHelp" name="nid" placeholder="Enter NID Number">
                                <small id="uNidHelp" class="form-text text-muted"> </small>
                            </div>
                        </div>

                        <div class="col-md-5 pl-4">
                            <div class="form-group">
                                <label for="updateEmployeePhone">Phone Number</label>
                                <input type="text" class="form-control" id="updateEmployeePhone" aria-describedby="uPhoneHelp" name="phone" placeholder="Enter Phone Number">
                                <small id="uPhoneHelp" class="form-text text-muted"> </small>
                            </div>
                        </div>
                    </div>

                    <div class="form-row justify-content-start pb-4">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="updateEmployeeEmail">Email Address</label>
                                <input type="text" class="form-control" id="updateEmployeeEmail" aria-describedby="uEmailHelp" name="email" placeholder="Enter Email Address" required>
                                <small id="uEmailHelp" class="form-text text-muted"> </small>
                            </div>
                        </div>

                        <div class="col-md-5 pl-4">
                            <div class="form-group">
                                <label for="updateEmployeeAddress">Present Address</label>
                                <input type="text" class="form-control" id="updateEmployeeAddress" aria-describedby="uAddressHelp" name="address" placeholder="Enter Present Address">
                                <small id="uAddressHelp" class="form-text text-muted"> </small>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-md-3">

                    <div class="row justify-content-end">

                        <div class="col-md-9">
                            <div id="updateEmployeeImage">
                                <img src="/Content/Logo/Employee.jpg" id="updateEmployeeImageThumbnai" class="img-rounded employee-photo" alt="Cinque Terre">
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-md-9">
                            <div class="custom-file image-uploader">
                                <input type="file" class="custom-file-input" id="customFile" name="ImageFile">
                                <label class="custom-file-label" for="customFile">Change</label>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </form>

        <div class="form-row justify-content-around">

            <div class="col-md-2">
                <input type="button" class="btn btn-primary" id="buttonCreateEmployee" value="CREATE">
            </div>
            <div class="col-md-10">

            </div>

        </div>
    </div>
</div>
